{
	"name"       : "mblet-syntax-cpp-syntax-cpp",
	"displayName": "mblet-syntax-cpp",
	"description": "Add simply syntax for C++ language",
	"version"    : "1.0.0",
	"publisher"  : "mblet",
    "engines"    : { "vscode": "^1.25.0" },
    "main"       : "./extension.js",
    "activationEvents": [
        "onLanguage:cpp",
		"onLanguage:c"
	],
	"contributes": {
        "commands": [
            {
                "command": "extension.mbletParameters",
                "title": "mbletParameters"
            }
        ],
        "themes": [
			{
				"id"     : "Default Dark+ mblet",
				"label"  : "Dark+ (default dark) (mblet)",
				"uiTheme": "vs-dark",
				"path"   : "./themes/mblet.json"
			}
		],
		"languages": [{
			"id"           : "c",
			"extensions"   : [ ".c"],
			"aliases"      : [ "C", "c" ]
		},
		{
			"id"           : "cpp",
			"extensions"   : [ ".cpp", ".cc", ".cxx", ".hpp", ".hh", ".hxx", ".h", ".ino", ".inl", ".ipp" ],
			"aliases"      : [ "C++", "Cpp", "cpp"]
		}],
		"grammars": [{
			"language" : "c",
			"scopeName": "source.c",
			"path"     : "./syntaxes/c.tmLanguage.json"
		},
		{
			"language" : "cpp",
			"scopeName": "source.cpp",
			"path"     : "./syntaxes/cpp.tmLanguage.json"
		},
		{
			"language" : "cpp",
			"scopeName": "mblet.syntax",
			"path"     : "./syntaxes/mblet-cpp.tmLanguage.json"
		}]
    },
    "devDependencies": {
        "vscode": "^1.1.22"
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    }
}